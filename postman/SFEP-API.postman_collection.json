{
  "info": {
    "name": "SFEP Evidence Tracking API",
    "description": "Complete API collection for the SFEP Evidence Tracking System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://qtpcdkposuvssdqxeqym.supabase.co/rest/v1"
    },
    {
      "key": "auth_url",
      "value": "https://qtpcdkposuvssdqxeqym.supabase.co/auth/v1"
    },
    {
      "key": "anon_key",
      "value": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InF0cGNka3Bvc3V2c3NkcXhlcXltIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjA1MDY3MzIsImV4cCI6MjA3NjA4MjczMn0.bpnRXx8WSJ5CRkJyTsZuJQX01e9VlEtfCzmByxgKTfM"
    },
    {
      "key": "access_token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Sign Up",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "apikey",
                "value": "{{anon_key}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePassword123\",\n  \"data\": {\n    \"full_name\": \"John Doe\",\n    \"badge_number\": \"BADGE-001\"\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{auth_url}}/signup",
              "host": ["{{auth_url}}"],
              "path": ["signup"]
            }
          }
        },
        {
          "name": "Sign In",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "pm.collectionVariables.set('access_token', response.access_token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "apikey",
                "value": "{{anon_key}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePassword123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{auth_url}}/token?grant_type=password",
              "host": ["{{auth_url}}"],
              "path": ["token"],
              "query": [
                {
                  "key": "grant_type",
                  "value": "password"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Evidence Bags",
      "item": [
        {
          "name": "List Evidence Bags",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "apikey",
                "value": "{{anon_key}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/evidence_bags?select=*,profiles:initial_collector(full_name,badge_number)&order=created_at.desc",
              "host": ["{{base_url}}"],
              "path": ["evidence_bags"],
              "query": [
                {
                  "key": "select",
                  "value": "*,profiles:initial_collector(full_name,badge_number)"
                },
                {
                  "key": "order",
                  "value": "created_at.desc"
                }
              ]
            }
          }
        },
        {
          "name": "Get Evidence Bag by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "apikey",
                "value": "{{anon_key}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/evidence_bags?id=eq.{bag_id}&select=*,profiles:initial_collector(full_name)",
              "host": ["{{base_url}}"],
              "path": ["evidence_bags"],
              "query": [
                {
                  "key": "id",
                  "value": "eq.{bag_id}"
                },
                {
                  "key": "select",
                  "value": "*,profiles:initial_collector(full_name)"
                }
              ]
            }
          }
        },
        {
          "name": "Create Evidence Bag",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "apikey",
                "value": "{{anon_key}}"
              },
              {
                "key": "Prefer",
                "value": "return=representation"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"physical\",\n  \"description\": \"Evidence collected from crime scene\",\n  \"location\": \"123 Main St, City\",\n  \"latitude\": 37.7749,\n  \"longitude\": -122.4194,\n  \"notes\": \"Found at entrance\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/evidence_bags",
              "host": ["{{base_url}}"],
              "path": ["evidence_bags"]
            }
          }
        },
        {
          "name": "Update Evidence Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "apikey",
                "value": "{{anon_key}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"current_status\": \"in_lab\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/evidence_bags?id=eq.{bag_id}",
              "host": ["{{base_url}}"],
              "path": ["evidence_bags"],
              "query": [
                {
                  "key": "id",
                  "value": "eq.{bag_id}"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Chain of Custody",
      "item": [
        {
          "name": "Get Custody Timeline",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "apikey",
                "value": "{{anon_key}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/chain_of_custody_log?bag_id=eq.{bag_id}&select=*,profiles:performed_by(full_name)&order=timestamp.asc",
              "host": ["{{base_url}}"],
              "path": ["chain_of_custody_log"],
              "query": [
                {
                  "key": "bag_id",
                  "value": "eq.{bag_id}"
                },
                {
                  "key": "select",
                  "value": "*,profiles:performed_by(full_name)"
                },
                {
                  "key": "order",
                  "value": "timestamp.asc"
                }
              ]
            }
          }
        },
        {
          "name": "Add Custody Entry",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "apikey",
                "value": "{{anon_key}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bag_id\": \"{bag_id}\",\n  \"action\": \"transfer\",\n  \"location\": \"Evidence Lab\",\n  \"notes\": \"Transferred for analysis\",\n  \"latitude\": 37.7749,\n  \"longitude\": -122.4194\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/chain_of_custody_log",
              "host": ["{{base_url}}"],
              "path": ["chain_of_custody_log"]
            }
          }
        }
      ]
    },
    {
      "name": "Cases",
      "item": [
        {
          "name": "List Cases",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "apikey",
                "value": "{{anon_key}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/cases?select=*,profiles:lead_officer(full_name)&order=created_at.desc",
              "host": ["{{base_url}}"],
              "path": ["cases"],
              "query": [
                {
                  "key": "select",
                  "value": "*,profiles:lead_officer(full_name)"
                },
                {
                  "key": "order",
                  "value": "created_at.desc"
                }
              ]
            }
          }
        },
        {
          "name": "Create Case",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "apikey",
                "value": "{{anon_key}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"offense_type\": \"Burglary\",\n  \"location\": \"123 Main St\",\n  \"description\": \"Break-in reported\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/cases",
              "host": ["{{base_url}}"],
              "path": ["cases"]
            }
          }
        },
        {
          "name": "Link Evidence to Case",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "apikey",
                "value": "{{anon_key}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"case_id\": \"{case_id}\",\n  \"bag_id\": \"{bag_id}\",\n  \"notes\": \"Evidence relevant to investigation\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/case_evidence",
              "host": ["{{base_url}}"],
              "path": ["case_evidence"]
            }
          }
        }
      ]
    },
    {
      "name": "Audit Log",
      "item": [
        {
          "name": "Get Audit Log",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "apikey",
                "value": "{{anon_key}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/audit_log?select=*,profiles:user_id(full_name)&order=created_at.desc&limit=100",
              "host": ["{{base_url}}"],
              "path": ["audit_log"],
              "query": [
                {
                  "key": "select",
                  "value": "*,profiles:user_id(full_name)"
                },
                {
                  "key": "order",
                  "value": "created_at.desc"
                },
                {
                  "key": "limit",
                  "value": "100"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
